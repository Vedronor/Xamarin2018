<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Slider
                Minimum="0"
                Maximum="100"
                Value="20"
                
                ValueChanged="ActionValorMudou"
                />
            <Label x:Name="SlideResult" />

            <Stepper  
                Minimum="0"
                Maximum="10"
                Value="4"
                Increment="2"
                ValueChanged="ActionValorMudouStepper"
                />
            <Label x:Name="StepperResult"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>