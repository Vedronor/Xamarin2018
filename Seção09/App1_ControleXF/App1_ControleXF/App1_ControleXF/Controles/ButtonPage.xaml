<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_ControleXF.Controles.ButtonPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Botão 1" 
                    TextColor="Blue"
                    BackgroundColor="White"
                    FontSize="24"
                    BorderColor="Red"
                    BorderRadius="20"
                    BorderWidth="5"
                    />
            <Button Text="Botão 2" />
            <Button Image="Button.png" BackgroundColor="Transparent" HeightRequest="100" HorizontalOptions="Start"/>
            <Button Image="Button2.jpg" BackgroundColor="Transparent" HeightRequest="100" HorizontalOptions="Start"/>
            <Button Image="Button2Black.jpg" BackgroundColor="Transparent" HeightRequest="100" HorizontalOptions="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>